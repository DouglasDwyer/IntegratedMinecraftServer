@namespace IMS_Interface.Preferences
@inherits PreferenceDisplayView

@{
    ConditionalDisplay display = (DisplayData as ConditionalDisplay);
    if (display.Condition(DisplayData.ParentDisplay.CurrentConfiguration))
    {

        display.InternalDisplay.ParentDisplay = display.ParentDisplay;
        RenderFragment fragment = builder =>
        {
            builder.OpenComponent(0, display.InternalDisplay.GetComponentType());
            builder.AddAttribute(0, "DisplayData", display.InternalDisplay);
            builder.CloseComponent();
        };
        @fragment
        <br />
    }
}
